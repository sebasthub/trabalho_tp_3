@page
@model Cinemaxx.Pages.Sala.EditModel
@{
}
<br>
<h2> Editar Sala</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Fechar'></button>
	</div>
}

<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Numero da Sala</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="numeroSala" value="">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Quantidade de Cadeiras</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="quantidadeCadeira" value="">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Tipo Sala</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="tipoSala" value="">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Horario</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="horario" value="">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Disponibilidade</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="disponibilidade" value="">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Fileiras</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="fileiras" value="">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Numero de Cadeiras</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="numeroCadeiras" value="">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Vagas PNE</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="vagasPne" value="">
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class='alert alert-success alert-dismissible fade show' role='alert'>
					<strong>@Model.successMessage</strong>
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Fechar'></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Cadastrar</button>
		</div>
		<div class="row mb-3 d-grid">
			<a class="btn btn-outline-prymary" href="/" role="button">Cancelar</a>
		</div>
	</div>
</form>
